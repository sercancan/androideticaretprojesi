<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/cardview_compat_inset_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/imgnetwork_resim_goster"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="25dp"
                        app:srcCompat="@mipmap/ic_launcher" />


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_yayin_aktif"
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:src="@mipmap/pasif_icon" />
                        <ImageView
                            android:id="@+id/img_yayin_pasif"
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:src="@mipmap/aktif_icon" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_UrunAdi"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/txt_urunKodu"
                                android:layout_centerVertical="true"
                                android:layout_weight="0.21"
                                android:textSize="20dp"
                                android:text="Urun  AdÄ±" />

                            <TextView
                                android:id="@+id/txt_urunKodu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginEnd="32dp"
                                android:layout_toStartOf="@+id/imgnetwork_resim_goster"
                                android:layout_weight="0.12"
                                android:text="Urun Kodu" />

                            <TextView
                                android:id="@+id/txt_urunEklenmeTarihi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.12"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/txt_urunFiyati"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.12"
                                android:text="TextView" />
                        </LinearLayout>

                    </TableRow>



                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_yayin_durumu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Yayindami ?" />

                            <TextView
                                android:id="@+id/txt_kategori_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Kategorisi ?" />

                            <TextView
                                android:id="@+id/txt_resim_url"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="--"/>
                        </LinearLayout>

                    </TableRow>

                    <TableRow android:layout_width="match_parent"
                              android:layout_height="match_parent" >

                        <TextView android:id="@+id/txt_urun_benzersiz_no"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" />
                    </TableRow>
                </TableRow>
    </TableLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>